// Posición de la "cámara" que controla el desplazamiento del mapa
float cameraX = {0};
float cameraY = { 0 };

int main() {
	const int screenWidth = 512;
	const int screenHeight = 448;

	InitWindow(screenWidth, screenHeight, "Mapa en Movimiento");

	Image marioImage = LoadImage("resources/bmario 1.png"); // If the file is inside an 'assets' folder


	Vector2 playerPos = { screenWidth / 3, screenHeight - TILE_SIZE * 2 };
	float velocityY = 0;
	bool onGround = true;

	SetTargetFPS(60);

	while (!WindowShouldClose()) {

		// Movimiento del personaje y ajuste de la cámara
		if (IsKeyDown(KEY_RIGHT)) cameraX -= SPEED;
		if (IsKeyDown(KEY_LEFT)) cameraX += SPEED;

		// Simulación de gravedad
		velocityY += GRAVITY;
		playerPos.y += velocityY;

		// Verificar colisión con el suelo
		if (playerPos.y >= screenHeight - TILE_SIZE * 2) {
			playerPos.y = screenHeight - TILE_SIZE * 2;
			velocityY = 0;
			onGround = true;
		}
		else {
			onGround = false;
		}

		// Salto
		if (IsKeyPressed(KEY_SPACE) && onGround) {
			velocityY = -JUMP_FORCE;
			onGround = false;
		}

		// Ajustar la cámara en el eje Y para seguir al personaje
		cameraY = -(playerPos.y - screenHeight / 2);


		BeginDrawing();
		ClearBackground(BLACK);

		// Dibujar mapa desplazado
		for (int y = 0; y < MAP_ROWS; y++) {
			for (int x = 0; x < MAP_COLS; x++) {
				if (map[y][x] == 1) {
					DrawRectangle(x * TILE_SIZE + cameraX, y * TILE_SIZE, TILE_SIZE, TILE_SIZE, DARKGRAY);
				}
			}
		}

		// Dibujar el personaje
		//DrawRectangle(playerPos.x - 20, playerPos.y - 40, 40, 40, BLUE);
	    
		//Texture2D mario = LoadTexture("bmario 1.png");
		//DrawTexture(mario, screenWidth/3, screenHeight/3, WHITE);

		Texture2D marioTexture = LoadTextureFromImage(marioImage);  // Convert Image to Texture
		//DrawTexture(marioTexture, screenWidth / 3, screenHeight / 3, WHITE);  // Draw the image at position (100, 100)
		DrawTexture(marioTexture, screenWidth / 3, screenHeight / 3, WHITE);

		DrawText("Usa las flechas para mover el mapa", 10, 10, 20, RAYWHITE);

		EndDrawing();
	}

	CloseWindow();
	return 0;
}
