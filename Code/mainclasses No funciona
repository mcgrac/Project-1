vector<Block> blocks;

//class Camera {
//
//	//poner esta class en otro arhcivo y las funcionalidades de seguir al personaje
//};

void initBlocks() {

	blocks.clear();

	for (int row = 0; row < MAP_ROWS; row++) {
		for (int col = 0; col < MAP_COLS; col++) {
			if (map[row][col] == 1) {

				Block b;

				b.block.x = col * TILE_SIZE;
				b.block.y = row * TILE_SIZE;
				b.block.width = TILE_SIZE;
				b.block.height = TILE_SIZE;
				b.color = RED;

				blocks.push_back(b);
			}
		}
	}
}

void drawBlocks(vector<Block> list) {

	for (int i = 0; i < blocks.size(); ++i) {

		DrawRectangleRec(list[i].block, list[i].color);
	}
}


bool marioCollidingRight(Player p, Block b) {

	//return (p.hitbox.x + p.hitbox.width >= b.block.x) &&
	//	(p.hitbox.x + p.hitbox.width <= b.block.x + b.block.width) &&
	//	(p.hitbox.y >= b.block.y) &&
	//	(p.hitbox.y <= b.block.y + b.block.height);

	return (CheckCollisionLines(p.getRightUp(), p.getRightDown(), b.getInitialPos(), b.getLeftDown(), NULL)); // check if the right side of mario's hitbox and left side of block's hitbox collide
}

bool marioCollidingLeft(Player p, Block b) {

	//return (p.hitbox.x <= b.block.x + b.block.width) &&
	//	(p.hitbox.x >= b.block.x) &&
	//	(p.hitbox.y >= b.block.y) &&
	//	(p.hitbox.y <= b.block.y + b.block.height);

	return (CheckCollisionLines(p.getInitialPos(), p.getLeftDown(), b.getRightUp(), b.getRightDown(), NULL));
}

bool marioCollidingBottom(Player p, Block b) {
	//return (p.hitbox.y + p.hitbox.height >= b.block.y) &&  // Los pies de Mario están tocando el bloque
	//	(p.hitbox.y + p.hitbox.height <= b.block.y + b.block.height) && // Evita detectar si Mario está en medio del bloque
	//	(p.hitbox.x + p.hitbox.width > b.block.x) &&  // Hay superposición horizontal
	//	(p.hitbox.x < b.block.x + b.block.width);

	return (CheckCollisionLines(p.getLeftDown(), p.getRightDown(), b.getRightUp(), b.getInitialPos(), NULL));
}

bool marioCollidingAbove(Player p, Block b) {
	//return (p.hitbox.y <= b.block.y + b.block.height) && // La cabeza de Mario toca la parte inferior del bloque
	//	(p.hitbox.y + p.hitbox.height > b.block.y + b.block.height) && // Mario viene desde abajo
	//	(p.hitbox.x + p.hitbox.width > b.block.x) &&  // Hay superposición horizontal
	//	(p.hitbox.x < b.block.x + b.block.width);

	return (CheckCollisionLines(p.getInitialPos(), p.getRightUp(), b.getLeftDown(), b.getRightDown(), NULL));
}


int main()
{
	// Tell the window to use vsync and work on high DPI displays
	SetConfigFlags(FLAG_VSYNC_HINT | FLAG_WINDOW_HIGHDPI);

	// Create the window and OpenGL context
	//InitWindow(MAP_COLS * TILE_SIZE, MAP_ROWS * TILE_SIZE, "Super Mario - Matriz de Mapa");

	const int screenWidth = 512;
	const int screenHeight = 448;

	InitWindow(screenWidth, screenHeight, "Mapa en Movimiento");

	//camaras
	Camera2D camera = { 0 };
	camera.target = { 0, 0 };
	camera.offset = { 200, 416 };
	camera.rotation = 0.0f;
	camera.zoom = 1.0f;

	Player mario(300, 400, TILE_SIZE, TILE_SIZE, 0, 0, 5.0f, 1);

	
	// Utility function from resource_dir.h to find the resources folder and set it as the current working directory so we can load from it
	SearchAndSetResourceDir("resources");

	//textures
	Image marioImage = LoadImage("resources/bmario 1.png"); // If the file is inside an 'assets' folder

	initBlocks(); //poner en la lista de vector los bloques con colisiones

	// game loop
	while (!WindowShouldClose())		// run the loop untill the user presses ESCAPE or presses the Close button on the window
	{

		//Aplicar gravedad
		mario.speed.y += GRAVITY;
		mario.hitbox.y += mario.speed.y;


		if (IsKeyDown(KEY_RIGHT)) {

			mario.move(1);
		}

		if (IsKeyDown(KEY_LEFT)) {

			mario.move(-1);
		}

		//detect collisions with the blocks in the list

		for (int i = 0; i < blocks.size(); ++i) {
			if (CheckCollisionRecs(mario.hitbox, blocks[i].block)) {

				// COLISIÓN ABAJO (Mario está parado sobre el bloque)
				if (marioCollidingBottom(mario, blocks[i])) {
					mario.speed.y = 0;
					mario.hitbox.y = blocks[i].block.y - mario.hitbox.height; // Asegurar que Mario se quede sobre el bloque
					mario.isJumping = false;
				}

				// COLISIÓN ARRIBA (Mario golpea con la cabeza)
				if (marioCollidingAbove(mario, blocks[i])) {
					mario.hitbox.y = blocks[i].block.y + blocks[i].block.height; // Lo mueve justo debajo del bloque
					mario.speed.y = 1.0f; // Hace que caiga inmediatamente
				}

				// COLISIÓN IZQUIERDA
				if (marioCollidingLeft(mario, blocks[i])) {
					mario.hitbox.x = blocks[i].block.x + blocks[i].block.width; // Bloquea movimiento a la izquierda
					mario.colliding = true;
				}
				// COLISIÓN DERECHA
				else if (marioCollidingRight(mario, blocks[i])) {
					mario.hitbox.x = blocks[i].block.x - mario.hitbox.width; // Bloquea movimiento a la derecha
					mario.colliding = true;
				}
			}
			else {
				//mario.colliding = false;
			}
		}

		//for (int i = 0; i < blocks.size(); ++i) {

		//	if (CheckCollisionRecs(mario.rect, blocks[i].block)) {

		//		//COLLIDING AT THE BOTTOM
		//		if (marioCollidingBottom(mario, blocks[i])) { // if mario is on the colliding block

		//			mario.speed.y = 0;
		//			mario.rect.y = blocks[i].block.y - TILE_SIZE;

		//			mario.isJumping = false;

		//		}
		//		
		//		//COLLIDING AT THE TOP
		//		if (marioCollidingAbove(mario, blocks[i])) { //if mario is under the colliding block

		//			mario.rect.y = blocks[i].block.y + TILE_SIZE;
		//			mario.rect.y += 0.5f;
		//		}
		//		
		//		//COLLIDING ON THE SIDES
		//		if(marioCollidingLeft(mario, blocks[i]))//mario is colliding with a block in its left
		//		{
		//			mario.rect.x = blocks[i].block.x + TILE_SIZE;
		//			mario.colliding = true;
		//		}
		//		else if (marioCollidingRight(mario, blocks[i])) {

		//			mario.rect.x = blocks[i].block.x - TILE_SIZE;
		//		}

		//	}
		//	else {

		//		//mario.colliding = false;
		//	}
		//}

		if (IsKeyPressed(KEY_SPACE) && !mario.isJumping) {

			mario.hitbox.y -= 0.5f;

			mario.jump(JUMP_FORCE);

			
		}

		// Mover la cámara para que siga a Mario
		camera.target.x = mario.hitbox.x + TILE_SIZE / 2;
		camera.target.y = mario.hitbox.y + TILE_SIZE / 2;

		// drawing
		BeginDrawing();

		BeginMode2D(camera);

		// Setup the back buffer for drawing (clear color and depth buffers)
		ClearBackground(BLACK);

		drawBlocks(blocks);

		//dubujar personaje
		DrawRectangleRec(mario.hitbox, RED);

		DrawText(TextFormat("Posición: (%.1f, %.1f)", mario.hitbox.x, mario.hitbox.y), 200, 10, 20, WHITE);
		DrawText(TextFormat("jumping: (%d)", mario.isJumping), 200, 60, 20, WHITE);
		DrawText(TextFormat("colliding: (%d)", mario.colliding), 200, 110, 20, WHITE);

		EndMode2D();

		// end the frame and get ready for the next one  (display frame, poll input, etc...)
		EndDrawing();
	}

	// destroy the window and cleanup the OpenGL context
	CloseWindow();
	return 0;
}
