// clase para el personaje
class Player {

public:
    Rectangle rect;  // Rectángulo que representa al personaje
    //Image mario;
    Vector2 speed;   // Velocidad del personaje
    Vector2 position; //vector 2 posicion
    bool isJumping;  // Bandera para saber si está en el aire
};


// Posición de la "cámara" que controla el desplazamiento del mapa
float cameraX{ 0 };
float cameraY{ 0 };

int main() {

    const int screenWidth = 1280;
    const int screenHeight = 800;

    InitWindow(screenWidth, screenHeight, "Mapa en Movimiento");

    Image marioImage = LoadImage("resources/bmario 1.png"); // If the file is inside an 'assets' folder

    Vector2 playerPos = { screenWidth / 3, screenHeight - TILE_SIZE * 3 };

    Player mario = { {screenWidth / 3, screenHeight - TILE_SIZE * 3, marioImage.width, marioImage.height}, {0, 0}, false}; //constructor

    float velocityY = 0;
    bool onGround = true;

    SetTargetFPS(60);

    while (!WindowShouldClose()) {

        // Movimiento del personaje y ajuste de la cámara
       /* if (IsKeyDown(KEY_RIGHT)) cameraX -= SPEED;
        if (IsKeyDown(KEY_LEFT)) cameraX += SPEED;*/

        if (IsKeyDown(KEY_RIGHT)) mario.rect.x += SPEED;
        if (IsKeyDown(KEY_LEFT)) mario.rect.x -= SPEED;


        // Simulación de gravedad
        mario.speed.y += GRAVITY;
        mario.rect.y += mario.speed.y;

        int tileX = (int)mario.rect.x / TILE_SIZE;
        int tileY = (int)(mario.rect.y + mario.rect.height) / TILE_SIZE;

        // Verificar colisión con el suelo
        if (tileY < MAP_ROWS && tileX < MAP_COLS && map[tileY][tileX] == 1) {
            mario.rect.y = tileY * TILE_SIZE - mario.rect.height;
            mario.speed.y = 0;
            mario.isJumping = false;
        }


        // Salto
        if (IsKeyPressed(KEY_SPACE) && !mario.isJumping) {
            mario.speed.y = JUMP_FORCE;
            mario.isJumping = true;
        }

        // Ajustar la cámara en el eje Y para seguir al personaje
        //cameraY = -(playerPos.y - screenHeight / 2);


        BeginDrawing();
        ClearBackground(BLACK);

        // Dibujar mapa desplazado
        for (int y = 0; y < MAP_ROWS; y++) {
            for (int x = 0; x < MAP_COLS; x++) {
                if (map[y][x] == 1) {
                    DrawRectangle(x * TILE_SIZE + cameraX, y * TILE_SIZE, TILE_SIZE, TILE_SIZE, DARKGRAY);
                }
            }
        }

        // Dibujar el personaje
        //DrawRectangle(playerPos.x - 20, playerPos.y - 40, 40, 40, BLUE);

        Texture2D marioTexture = LoadTextureFromImage(marioImage);  // Convert Image to Texture
        DrawTexture(marioTexture, screenWidth / 3, screenHeight - (TILE_SIZE * 3), WHITE);

        //DrawText("Usa las flechas para mover el mapa", 10, 10, 20, RAYWHITE);
        DrawText(TextFormat("Posición: (%.1f, %.1f)", mario.rect.x, mario.rect.y), 10, 10, 20, DARKGRAY);

        EndDrawing();
    }

    CloseWindow();
    return 0;
}
